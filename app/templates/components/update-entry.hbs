{{#if updateEntryForm}}
  <h4>Update {{entry.author}}'s article of {{entry.headline}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="headline">Headline</label>
          {{input value=headline id="headline" placeholder=entry.headline}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=entry.author}}
        </div>

        <div class="form-group">
          <label for="article">Article</label>
          {{input value=article id="article" placeholder=entry.article}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=entry.image}}
        </div>

        <button {{action 'update' entry}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateEntryForm'}}>Update</button>
{{/if}}
